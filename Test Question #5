#include <iostream>

struct TreeNode 
{
    int info;
    TreeNode * left, * right;
    TreeNode(int d, TreeNode * lptr, Treenode * rptr)
      : info(d), left(lptr), right(rptr)
    { }
    
};

int sumWithPosParent(TreeNode * root, bool countSelf){
  
  //base case
  if(root == nullptr){
    return 0;
  }

  int sum;
  
  if(countSelf){
    sum = sum + root->int;
  }
  
  sum = sum + sumWithPosParent(root->left, root->int > 0);
  sum = sum + sumWithPosParent(root->right, root->int > 0)
  
  
  return sum;

}

int main(){
  new TreeNode * root = (5, TreeNode * (2, nullptr, nullptr), TreeNode * (4, nullptr, nullptr);
  cout << sumWithPosParent(root, true);
}
